#######################################
# Environmental Variables
#######################################

PATH=$PATH:$HOME/bin
EDITOR=/usr/bin/vi
export EDITOR PATH

#######################################
# Language
#######################################
LANG=ja_JP.UTF-8
export LANG

# Ask if the lists of complementary is too long or not.
# -1 : Don't ask.
#  0 : Ask if there is no enough space to show the lists.
LISTMAX=0
export LISTMAX

PATH=$PATH:$HOME/.rvm/bin # Add RVM to PATH for scripting
